<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
         tools:context="com.nidheesh.emphasys.malayalamradio.PlayActivity"
    tools:showIn="@layout/app_bar_play"
    android:padding="5dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imbPlayButton"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_btn_play"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/currentStationName"
            android:layout_above="@+id/imbPlayButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#1a8fd3" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageAlbumArt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />


</RelativeLayout>
